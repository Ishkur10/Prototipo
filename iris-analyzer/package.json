{
  "name": "iris-analyzer",
  "private": true,
  "version": "0.0.0",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:electron": "npm run clean && tsc -p electron/tsconfig.json",
    "electron:dev": "npm run build:electron && concurrently \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:5173 && electron main.js\"",
    "electron:build": "npm run build:electron && npm run build && node copy-electron-files.js && node electron-builder.js",
    "electron:start": "electron main.js",
    "lint": "eslint .",
    "preview": "vite preview",
    "clean": "node cleanup.js",
    "debug": "electron debug-paths.js",
    "full-build": "node complete-build.js"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/material": "^7.1.0",
    "@tensorflow/tfjs": "^4.22.0",
    "axios": "^1.9.0",
    "canvas": "^3.1.0",
    "classnames": "^2.5.1",
    "d3": "^7.9.0",
    "electron-is-dev": "^2.0.0", 
    "opencv.js": "^1.2.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-dropzone": "^14.3.8",
    "recharts": "^2.15.3",
    "sharp": "^0.34.1",
    "three": "^0.176.0",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.eyecos.irisanalyzer",
    "productName": "Iris Analyzer",
    "files": [
    "dist/**/*"
  ],
  "asar": false,
    "extraResources": [
      {
        "from": "resources/prueba_electron-1.0-SNAPSHOT.jar",
        "to": "prueba_electron.jar"
      }
    ],
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.medical"
    },
    "win": {
      "target": ["portable"]
    },
    "linux": {
      "target": ["AppImage", "deb"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}